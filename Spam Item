local functions = {}
local UIS = game:GetService("UserInputService")
local Player = game:GetService("Players").LocalPlayer
local Character = Player.Character
local Auto = false

local KeyCode = Enum.KeyCode.G
local ToolName
local Cooldown

local function SpamDynamite()
	if not Character:FindFirstChild(ToolName) and Player.Backpack:FindFirstChild(ToolName) then
		local Dynamite = Player.Backpack:FindFirstChild(ToolName)
		Dynamite.Parent = Character
		wait()
		mouse1click()
	else
		local Dynamite = Character:FindFirstChild(ToolName)
		wait()
		mouse1click()
end
end

function functions:SpamTool(N, C)
    if (type(N) == "string") then
        ToolName = N
    end
    if (type(C) == "number") then
        Cooldown = C
    end
    
    while true do
	wait(Cooldown)
	if Auto then
		if Player.Backpack:FindFirstChild(ToolName) then
			Player.Backpack:FindFirstChild(ToolName).Parent = Character
			SpamDynamite()
			wait()
		    end
	    end
    end
end

UIS.InputBegan:Connect(function(Input, Chat)
	if Input.KeyCode == KeyCode and not Chat then
		if Auto then
			Auto = false
			print(Auto)
		else
			Auto = true
			print(Auto)
		end
	end
end)

return functions
